<div class="container">
    <div class="jumbotron">
        <h1>User Profile </h1>
<a href="/user/logout"><button type="button" class="btn btn-danger">Logout</button></a>
       <div class="card">
  <img src="/uploads/{{this.users.image}}" alt="Avatar" style="width:15%">
  <div class="container">
    <h4>Name : <b>{{this.users.name}}</b></h4>
    <p>Id :<b>{{this.users.studentID}}</b> </p>
    <p>E-mail :<b>{{this.users.email}}</b> </p>
    <p>Role :<b>{{this.users.role}}</b> </p>
  </div>
</div>
    </div>
    <div class="profile-book-section">
        <h3>Purchased Books </h3>
        <ul class="list-group">
            {{#each books}}

            <li class="list-group-item"><img src='/uploads/{{this.bookId.image}}' width="50" height="50">{{this.bookId.book_name}} --- Purchase Date : {{this.purchaseDate}} -- 
                <a href="/book/return/{{this.bookId._id}}" class="btn btn-info">Return</a></li>
            {{/each}}
        </ul>
    </div>
     <div class="profile-book-section">
        <h3>Fines  </h3>
        <ul class="list-group">
            
            

            <li class="list-group-item"> --- user Id : {{this.userId}} -- 
                Fines : {{this.fines.amount}}</li>
                
            
        </ul> 
    </div>
      
</div>