<form action="/user/signup" method="post" enctype="multipart/form-data">
<div class="form-group">
    <h1>SignUp Form</h1>
    <label for="name">name:</label>
    <input type="text" name="name" id="name" class="form-control" required>
</div>
<div class="form-group">
    <label for="email">email:</label>
    <input type="email" name="email" id="email" class="form-control" required>
</div>
<div class="form-group">
    <label for="email">Photo:</label>
    <input type="file" name="image" id="image" class="form-control" required>
</div>
<div class="form-group">
    <label for="pwd">Password:</label>
    <input type="password" name="password" id="pwd" class="form-control" required>
</div>
<div class="form-group">
    <label for="studentID">StudentID:</label>
    <input type="text" name="studentID" id="studentID" class="form-control" required>
</div>

<button type="submit" class="btn btn-default">SignUp</button>
</form>